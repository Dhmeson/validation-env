{
  "compilerOptions": {
    /* === Configurações básicas === */
    "target": "ES2022",                       // Usa o ES mais recente compatível com Node 22
    "lib": ["ES2022"],
    "module": "NodeNext",                     // Necessário para suporte ESM nativo no Node
    "moduleResolution": "NodeNext",
    "rootDir": "./src",                       // Mantém a estrutura organizada
    "outDir": "./dist",
    "sourceMap": true,

    /* === Melhor compatibilidade === */
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "skipLibCheck": true,

    /* === Tipagem e verificação === */
    "strict": true,
    "noImplicitAny": true,

    /* === Decorators (se usados) === */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    /* === Node ESM: importante! === */
   // "allowImportingTsExtensions": true,       // Permite importar arquivos com extensão .ts
    "moduleDetection": "force"                // Garante modo ESM mesmo sem "type": "module"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
